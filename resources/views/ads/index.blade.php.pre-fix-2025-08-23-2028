    {{-- ✅ سكربت نسخ الرابط + إظهار/إخفاء الفلاتر مع حفظ الحالة + فتح تلقائي عند وجود معايير --}}
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert("✅ تم نسخ رابط الإعلان!");
            }).catch(() => {
                alert("❌ فشل في النسخ!");
            });
        }

        (function () {
            const KEY = 'delni.adsFilters';
            const btn = document.getElementById('toggleFiltersBtn');
            const box = document.getElementById('adsFiltersBox');
            const hasFilters = {{ $hasFilters ? 'true' : 'false' }};

            if (!btn || !box) return;

            function apply(open) {
                box.classList.toggle('hidden', !open);
                btn.textContent = open ? btn.dataset.hide : btn.dataset.show;
            }

            // الحالة الابتدائية: افتح إذا في فلاتر، وإلا استخدم localStorage
            let open = (localStorage.getItem(KEY) === '1');
            if (hasFilters) {
                open = true;
                localStorage.setItem(KEY, '1');
            }
            apply(open);

            btn.addEventListener('click', function () {
                open = !open;
                localStorage.setItem(KEY, open ? '1' : '0');
                apply(open);
            });
        })();
    </script>
</x-main-layout>
